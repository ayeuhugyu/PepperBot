{
    "compilerOptions": {
        "forceConsistentCasingInFileNames": true,
        "strict": true,

        "moduleResolution": "node",
        "resolveJsonModule": true,
        "target": "ESNext",
        "module": "ESNext",

        "esModuleInterop": true,
    },
    "include": ["**/*.ts"],
    "exclude": ["node_modules", "tests", "cache"]
}